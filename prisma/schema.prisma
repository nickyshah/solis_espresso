generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MenuItem {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  category    Category
  isFeatured  Boolean     @default(false)
  ingredients String[]    // Postgres string array; can be empty
  createdAt   DateTime    @default(now())
  hasMilk     Boolean     @default(false) // Whether item can have milk options

  // NEW: relation to MenuSize
  sizes       MenuSize[]
}

model MenuSize {
  id         Int        @id @default(autoincrement())
  menuItem   MenuItem   @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  menuItemId Int
  size       SizeOption
  price      Float

  @@unique([menuItemId, size]) // small/large uniqueness per item
}

enum Category {
  coffee
  cold_drinks
  tea
  pastries
  sandwiches
  desserts
}

enum SizeOption {
  small
  large
  single  // For food items that don't have sizes
}

enum MilkOption {
  regular
  oat
  almond
  soy
}

// Milk upcharge pricing
model MilkUpcharge {
  id          Int        @id @default(autoincrement())
  milkType    MilkOption
  upcharge    Float      // Additional cost for non-dairy milk
  
  @@unique([milkType])
}

// Contact form submissions
model ContactForm {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  phone       String?
  subject     String?
  message     String
  inquiryType String   @default("general")
  createdAt   DateTime @default(now())
}
